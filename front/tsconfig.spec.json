{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "**/*.cy.ts",
    "**/*.e2e-spec.ts",
    "src/**/*.cy.ts"
  ]
}